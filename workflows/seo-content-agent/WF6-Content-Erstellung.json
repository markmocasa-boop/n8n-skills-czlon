    {
      "parameters": {
        "jsCode": "const response = $input.first().json;\nconst section = $('Schreib-Prompt erstellen').first().json.section;\nconst contentRaw = response.text;\n\nreturn [{\n  json: {\n    abschnitt: `${section.position}. ${section.ueberschrift}`,\n    content_raw: contentRaw,\n    content_humanized: '',\n    content_final: ''\n  }\n}];"
