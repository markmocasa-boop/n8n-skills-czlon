    {
      "parameters": {
        "jsCode": "const gliederung = $('Gliederung laden').all().map(i => i.json);\nconst analyse = $('Analyse-Daten laden').all().map(i => i.json);\nconst insights = $('User Insights laden').all().map(i => i.json);\nconst voiceProfile = $('Voice Profile laden').first()?.json?.data || '';\n\n// Group outline items into sections for sequential writing\nconst sections = gliederung.map(item => ({\n  position: item.position,\n  ebene: item.ebene,\n  ueberschrift: item.ueberschrift,\n  typ: item.typ,\n  basiert_auf: item.basiert_auf,\n  stichpunkte: item.stichpunkte,\n  relevantAnalyse: analyse.filter(a => \n    a.keyword_oder_thema && item.stichpunkte?.includes(a.keyword_oder_thema)\n  ),\n  relevantInsights: insights.filter(i => i.unique_angle === 'ja')\n}));\n\nreturn sections.map(s => ({ json: { ...s, voiceProfile, totalSections: sections.length } }));"
      },
      "id": "a1b2c3d4-6001-4000-8000-000000000006",
